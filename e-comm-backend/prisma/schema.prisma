generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// 1. USERS
// ==========================================
model User {
  id                        Int     @id @default(autoincrement())
  username                  String  @unique
  password                  String // In a real app, this should be hashed!
  role                      String  @default("user") // "admin" or "user"
  logo_url                  String? // Optional logo for the user
  price_modifier_percentage Float   @default(0.0) // E.g., 10 for +10%, -5 for -5%
  visible_category_ids      String  @default("") // Comma-separated IDs like "1,2,3"

  orders Order[] // Relationship to their orders

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// 2. CATEGORIES
// ==========================================
model Category {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  icon        String? // For UI icons/emojis
  isPermanent Boolean @default(false) // Mark categories as permanent/non-deletable

  products Product[] // One-to-many relationship

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// 3. PRODUCTS
// ==========================================
model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  image_url   String
  base_price  Float

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  orderItems OrderItem[] // Relationship to see which orders contain this product

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// 4. ORDERS (The Checkout generated ID)
// ==========================================
model Order {
  id          Int    @id @default(autoincrement())
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
  status      String @default("COMPLETED") // Could be PENDING, COMPLETED, etc.
  total_price Float // The final calculated total of the whole cart

  items OrderItem[] // The actual products inside this specific order

  createdAt DateTime @default(now())
}

// ==========================================
// 5. ORDER ITEMS (The snapshot of the cart)
// ==========================================
model OrderItem {
  id      Int   @id @default(autoincrement())
  orderId Int
  order   Order @relation(fields: [orderId], references: [id])

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  quantity          Int
  price_at_purchase Float // Locks in the price (including their custom percentage) at checkout time
}
